{
    "apps": [
        {
            "name": "litecoin.full-sync",
            "exec_interpreter": "php",
            "exec_mode": "fork_mode",
            "script": "artisan",
            "args": [
                "ltc:full-sync"
            ],
            "autorestart": true,
            "restart_delay": 10000,
            "error_file": "storage/logs/litecoin.full-sync.log",
            "out_file": "storage/logs/litecoin.full-sync.log",
            "merge_logs": true,
            "watch": false
        }
    ]
}
